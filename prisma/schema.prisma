generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Referral {
  id          String     @id @default(cuid())
  email       String
  name        String
  baseCode    String
  code        String     @unique
  createdAt   DateTime   @default(now())
  clicks      Int        @default(0)
  conversions Int        @default(0)
  purchases   Purchase[]
}

model Purchase {
  id            String   @id @default(cuid())
  customerName  String
  customerEmail String
  product       String
  amountCents   Int
  referralCode  String?
  createdAt     DateTime @default(now())
  referralId    String?
  referral      Referral? @relation(fields: [referralId], references: [id])
}
